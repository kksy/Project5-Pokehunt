<% include header %>

<div class="row">
  <h2>Login</h2>
  <form class="col s6 offset-s3" action="/test/login" method="POST">
    <div class="row">
      <div class="input-field col s12">
        <input id="username" name="username" type="text" class="validate" maxlength="10">
        <label for="username">Username</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="password" name="password" type="password" class="validate" required>
        <label for="password">Password</label>
      </div>
    </div>
    <div class="row">
      <div class="col m12">
          <p class="right-align">
              <button class="btn btn-large waves-effect waves-light" type="submit" name="action">Login</button>
          </p>
      </div>
  </div>
  </form>
</div>

<% include footer %>