<% include header %>

<div class="row">
  <div class="col s12 m6 offset-m3">
    <ul class="tabs">
      <li class="tab col s3"><a href="#login">Login</a></li>
      <li class="tab col s3"><a href="#signup">Signup</a></li>
    </ul>
  </div>

  <div id="login" class="col s12 m6 offset-m3">
    <form class="" action="/auth" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <input id="username" name="username" type="text" class="validate" maxlength="10">
          <label for="username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="col m12">
          <p class="right-align">
            <button class="btn btn-large waves-effect waves-light" type="submit" name="action">Submit</button>
            </p>
        </div>
      </div>
    </form>
  </div>

  <div id="signup" class="col s12 m6 offset-m3">
    <form class="" action="/auth/signup" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <input id="username" name="username" type="text" class="validate" maxlength="10">
          <label for="username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="col m12">
          <p class="right-align">
            <button class="btn btn-large waves-effect waves-light" type="submit" name="action">Submit</button>
            </p>
        </div>
      </div>
    </form>
  </div>
</div>

<% include footer %>